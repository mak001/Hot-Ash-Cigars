@model HotAshCigars.Models.Order

@{
    var first = Model.OrderDetails.FirstOrDefault();
}
<div>
    @if (Model != null) {
        <h4>Order #@Model.ID</h4>
        <hr />
        <div>@HotAshCigars.Controllers.UserHelper.GetApplicationUser(Model.UserID).Email</div>
        <br />

        <div>
            <span class="left">
                @Html.DisplayNameFor(model => model.OrderDate)
            </span>
            <span class="right">
                @Html.DisplayFor(model => model.OrderDate)
            </span>
        </div>

        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(f => first.Cigar.Name)</th>
                <th>@Html.DisplayNameFor(f => first.Cigar.Dimensions)</th>
                <th>@Html.DisplayNameFor(f => first.Cigar.Weight)</th>
                <th>@Html.DisplayNameFor(f => first.Quantity)</th>
                <th>@Html.DisplayNameFor(f => first.PricePaidEach)</th>
            </tr>

            @foreach (var detail in Model.OrderDetails) {
                <tr>
                    <td>@Html.DisplayFor(d => detail.Cigar.Name)</td>
                    <td>@detail.Cigar.Dimensions.ToString()</td>
                    <td>@Html.DisplayFor(d => detail.Cigar.Weight)</td>
                    <td>@Html.DisplayFor(d => detail.Quantity)</td>
                    <td>@Html.DisplayFor(d => detail.PricePaidEach)</td>
                </tr>
}
        </table>
    }
</div>